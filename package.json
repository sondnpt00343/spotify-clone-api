{
    "name": "spotify-clone-api",
    "version": "1.0.0",
    "description": "Spotify Clone API Backend with ExpressJS and SQLite",
    "main": "dist/app.js",
    "scripts": {
        "start": "node dist/app.js",
        "dev": "nodemon src/app.ts",
        "build": "tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "migrate": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "seed": "knex seed:run",
        "migrate:prod": "NODE_ENV=production knex migrate:latest --knexfile ./knexfile.js",
        "seed:prod": "NODE_ENV=production knex seed:run --knexfile ./knexfile.js",
        "db:setup": "node setup-db.js",
        "db:migrate": "node migrate-only.js",
        "db:reset": "rm -f production.sqlite && npm run build && npm run db:setup",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix"
    },
    "keywords": [
        "spotify",
        "api",
        "express",
        "typescript",
        "sqlite"
    ],
    "author": "Developer",
    "license": "MIT",
    "dependencies": {

        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "helmet": "^7.0.0",
        "joi": "^17.9.0",
        "jsonwebtoken": "^9.0.0",
        "knex": "^2.5.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "music-metadata": "^7.14.0",
        "node-cache": "^5.1.2",
        "sqlite3": "^5.1.6",

        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.3",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.19.9",
        "@types/node-cache": "^4.2.5",
        "@types/supertest": "^2.0.12",

        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "eslint": "^8.45.0",
        "jest": "^29.6.1",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
